
jQuery(document).ready(function($){var locatBr='//'+location.host;var sasaUrlBr=[locatBr+'/account/login',locatBr+'/account/register',locatBr+'/account/coupon',locatBr+'/flash-sales',locatBr+'/active-ajax_activity_page_red_button.html',locatBr+'/active-ajax_activity_page_red.html'];var demoBr={};demoBr.trys=function(index,Obj){layer.open({type:1,title:false,shade:.5,skin:'browser-popuo browser-popuo-'+index,anim:2,area:['745px','690px'],shadeClose:true,closeBtn:'关闭',content:'<div class="browser-con" id="J-browser-con">'+Obj+'</div>'});};$.ajax({type:'post',dataType:'json',data:{'source_type':'page_red'},url:sasaUrlBr[4],error:function(request){},success:function(str){var _status=str.status;if(_status=='1'){$('body').append('<div class="ac-browse" id="J-ac-browse"><img src="'+locatBr+'/public/app/b2c/statics/images/active/browse20171111pc/redpacket.png"></div>');};}});$('#J-ac-browse').live('click',function(event){$(this).hide(1000);$.ajax({type:'post',dataType:'json',data:{'source_type':'page_red'},url:sasaUrlBr[5],error:function(request){},success:function(str){var _status=str.status;if(_status=='1'){var _bonus=str.data.amount;var _bondedName=str.data.bonded_name;var zsjBr='<div class="browser-m1"><div class="browser-c1">';zsjBr+='<p class="browser-p1"><span>'+_bonus+'</span></p>';zsjBr+='<p class="browser-p0"><span>'+_bondedName+'</span></p>';zsjBr+='<p class="browser-next"><a href="'+sasaUrlBr[2]+'" class="browser-btn"></a><a href="'+sasaUrlBr[3]+'" class="browser-btn"></a></p>';zsjBr+='<p class="browser-p2"><span  class="browser-btn2" id="J-browser-btn2"></span></p>';zsjBr+='<span class="browser-close browser-close1" id="J-browser-close1"></span>';zsjBr+='</div></div>';zsjBr+='<div class="browser-m2">';zsjBr+='<span class="browser-close browser-close2" id="J-browser-close2"></span>';zsjBr+='</div>';demoBr.trys('0',zsjBr);$('#J-browser-close1').live('click',function(event){layer.closeAll();});var _m2=$('#J-browser-m2'),_bCon=$('.browser-con');$('#J-browser-btn2').live('click',function(event){_bCon.animate({marginLeft:'-745px'},200);_m2.fadeIn(200);});$('#J-browser-close2').live('click',function(event){_bCon.animate({marginLeft:'0'},200);_m2.fadeOut(200);});}else{layer.msg(str.msg);}}});});});